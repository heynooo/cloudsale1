<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/base_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0f0f0"
    >


    <!-- 标题栏 -->
    <include layout="@layout/base_ativity_head"/>
    <!--标签-->
    <!-- 具体的内容,但是现在不知道是什么,所以先定义一个容器 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27.5dp">

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定时选择"
            android:textColor="#d0cfcf"
            android:textSize="15dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@mipmap/room_info_name">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal">

            <CheckBox

                android:id="@+id/cb_is_1"
                style="@style/timing_cb"
                android:layout_marginLeft="30dip"
                android:layout_toLeftOf="@+id/cb_is_2"
                android:text="1"/>
        </LinearLayout>


            <CheckBox
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:id="@+id/cb_is_2"
                style="@style/timing_cb"
                android:text="2"/>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/cb_is_3"
                style="@style/timing_cb"
                android:text="3"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:paddingTop="1dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定时开"
                    android:textColor="#d0cfcf"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="180dp">

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定时开"
                    android:textColor="#d0cfcf"
                    android:textSize="15dp"
                    />

            </LinearLayout>
        </LinearLayout>
        <!--开关-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@mipmap/bg_timing_open"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/test1"
                android:layout_width="58dp"
                android:layout_height="179dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/test2"
                android:layout_width="58dp"
                android:layout_height="179dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                >
            </LinearLayout>


        </RelativeLayout>
        <!--自定义进度条-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27.5dp">

        <TextView
           android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定时重复"
            android:textColor="#d0cfcf"
            android:textSize="15dp"
            />

    </LinearLayout>

    <!--按键-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"

        android:background="@mipmap/bg_timimg_repeat"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                style="@style/timing_cb"
                android:text="一"/>


            <CheckBox
                android:id="@+id/cb_is_timing2"
                style="@style/timing_cb"
                android:text="二"/>


            <CheckBox
                android:id="@+id/cb_is_timing3"
                style="@style/timing_cb"
                android:text="三"/>


            <CheckBox
                android:id="@+id/cb_is_timing4"
                style="@style/timing_cb"
                android:text="四"/>


            <CheckBox
                android:id="@+id/cb_is_timing5"
                style="@style/timing_cb"
                android:text="五"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_is_timing6"
                style="@style/timing_cb"
                android:text="六"/>

            <CheckBox
                android:id="@+id/cb_is_timing7"
                style="@style/timing_cb"
                android:text="日"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>