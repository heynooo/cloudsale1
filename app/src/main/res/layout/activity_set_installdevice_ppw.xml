<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/base_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <!--<EditText-->
            <!--style="@style/editText_update_set"-->
            <!--/>-->
        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <EditText
                style="@style/editText_update_set"
                android:id="@+id/editText"/>
            <CheckBox
                android:id="@+id/cb_is_visible"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:button="@null"
                android:background="@drawable/regsiter_checkbox"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/editText"
                android:layout_alignEnd="@+id/editText"/>
        </RelativeLayout>



        <Button
            android:id="@+id/set_ppw_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="下一步"
            android:background="@drawable/button_setting_next"
            />


    </LinearLayout>

</LinearLayout>