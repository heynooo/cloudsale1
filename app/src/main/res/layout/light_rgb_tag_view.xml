<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_rbg_tag"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:addStatesFromChildren="true"
        android:background="@mipmap/lightrgb_tab1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_light_tag_color"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/tv_select_rbglight_no"
            android:text="@string/scene_rgb"
            />
        <TextView
            android:id="@+id/tv_light_tag_uncolor"
            android:layout_weight="1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/tv_select_rbglight"
            android:text="@string/scene_cw"
            />



    </LinearLayout>



</LinearLayout>