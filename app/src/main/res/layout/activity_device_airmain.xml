<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/air"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#fff0f0f0"
              android:orientation="vertical">

    <!-- 标题栏 -->
    <include layout="@layout/base_ativity_head"/>
    <!--标签-->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70.0">

        <TextView
            android:id="@+id/tv_indoor_tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="室内温度32℃"
            android:textColor="#BBC8D4"
            android:textSize="22.0sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="500"
        android:orientation="vertical">

        <com.vanhitech.vanhitech.views.RotatView
            android:id="@+id/setC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/setT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="16"
            android:textColor="#BBC8D4"
            android:textSize="56.0sp"/>

        <TextView
            android:id="@+id/tv_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/setT"
            android:layout_alignBottom="@+id/setT"
            android:layout_toRightOf="@+id/setT"
            android:text="℃"
            android:textColor="#BBC8D4"
            android:textSize="24.0sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="40.0"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_weight="232.0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/iv_timer"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_alignBottom="@+id/login_et_password"
                android:layout_alignEnd="@+id/login_et_password"
                android:layout_alignRight="@+id/login_et_password"
                android:background="@drawable/light_timing_checkbox"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_info"
                android:textColor="#BBC8D4"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/onB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_air_switch_state"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5.0dip"
                android:text="开关"
                android:textColor="#ffb1b1b1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_device_info"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_btn_air_info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5.0dip"
                android:text="设备信息"
                android:textColor="#ffb1b1b1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="77.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:background="@mipmap/img_air_main_divider"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="5.0dip"
            android:background="#ffffffff"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@+id/iv_air_model"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="1.0dip"
                    android:layout_marginTop="1.0dip"
                    android:background="@drawable/selector_timer_reapt"
                    android:text="模式"
                    android:textColor="#ffffffff"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@+id/iv_air_windspeed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="1.0dip"
                    android:layout_marginTop="1.0dip"
                    android:background="@drawable/selector_timer_reapt"
                    android:text="风速"
                    android:textColor="#ffffffff"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@+id/iv_air_move_wind"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="1.0dip"
                    android:layout_marginTop="1.0dip"
                    android:background="@drawable/selector_timer_reapt"
                    android:text="摆风"
                    android:textColor="#ffffffff"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@+id/iv_air_pair"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="1.0dip"
                    android:layout_marginTop="1.0dip"
                    android:background="@drawable/selector_timer_reapt"
                    android:text="匹配"
                    android:textColor="#ffffffff"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>