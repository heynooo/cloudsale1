<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/base_activity"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 具体的内容,但是现在不知道是什么,所以先定义一个容器 -->

    <LinearLayout
        android:layout_width="665px"
        android:layout_height="805px"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp"
        >
        <!--开关-->
        <LinearLayout
            android:layout_width="665px"

            android:layout_height="match_parent"
            android:background="@mipmap/rgblight_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="114px"
                android:layout_marginRight="114px"
                android:layout_marginTop="38px"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cb_is_switch"
                    android:layout_width="413px"
                    android:layout_height="413px"
                    android:background="@drawable/lightwhite_openclose_checkbox"
                    android:button="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        style="@style/text_help"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="46px"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:text="亮度 "
                        android:textSize="12dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px">

                    <SeekBar
                        android:id="@+id/LightLimitBar"
                        style="@style/seekbar"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        style="@style/text_help"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="46px"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:text="@string/colortemp"
                        android:textSize="12dp"
                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="90px">

                    <SeekBar
                        android:id="@+id/LightPaceBar"
                        style="@style/seekbar"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--自定义进度条-->
    </LinearLayout>


    <!--按键-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="206px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="58px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/cb_is_remote_control"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_alignBottom="@+id/login_et_password"
                android:layout_alignEnd="@+id/login_et_password"
                android:layout_alignRight="@+id/login_et_password"
                android:background="@drawable/selector_btn_light_remote_control"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_remote_control"
                android:textColor="#BBC8D4"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_is_timing"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_alignBottom="@+id/login_et_password"
                android:layout_alignEnd="@+id/login_et_password"
                android:layout_alignRight="@+id/login_et_password"
                android:background="@drawable/light_timing_checkbox"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timing"
                android:textColor="#BBC8D4"
                />

        </LinearLayout>
        <!--模式速度-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/cb_is_deviceinfo"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_alignBottom="@+id/login_et_password"
                android:layout_alignEnd="@+id/login_et_password"
                android:layout_alignRight="@+id/login_et_password"
                android:background="@drawable/light_timing_checkbox"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_info"
                android:textColor="#BBC8D4"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>