<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_my_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/config_device_input_box"
        android:paddingBottom="5.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="50.0dip"
        android:password="true"
        android:singleLine="true"
        android:textColor="#ffa2a2a2"
        android:textColorHint="#ffd2d2d2"/>

    <ImageView
        android:id="@+id/iv_display_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_alignBottom="@+id/et_my_edittext"
        android:button="@null"
        android:layout_alignEnd="@+id/et_my_edittext"
        android:layout_alignRight="@+id/et_my_edittext"
        android:background="@drawable/regsiter_checkbox"/>
</RelativeLayout>