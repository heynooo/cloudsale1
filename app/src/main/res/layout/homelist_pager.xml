<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="8dp"
              android:clipChildren="false"
              android:paddingTop="8dp"
              android:orientation="vertical">



    <com.vanhitech.vanhitech.views.InnerViewPager
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/home_pager_viewpager"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:clipChildren="false"
        ></com.vanhitech.vanhitech.views.InnerViewPager>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="@null">

        <Button
            android:id="@+id/left_room_info"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/selector_bt_home_reviseroot"
            android:gravity="center"/>

        <!--android:text="设备"-->
        <TextView
            android:id="@+id/pager_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="设备"
            android:textColor="#b1b1b1"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/right_room_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/selector_bt_home_addroot"
            android:gravity="center"/>
    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--listview-->
        <com.vanhitech.vanhitech.SwipeMenulistview.PullToRefreshSwipeMenuListView
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/home_pager_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.vanhitech.vanhitech.SwipeMenulistview.PullToRefreshSwipeMenuListView>
    </LinearLayout>
</LinearLayout>