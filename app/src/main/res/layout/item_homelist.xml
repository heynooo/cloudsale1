<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="38px"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="40px"
                android:id="@+id/item_homelist"
                android:layout_width="654px"
                android:layout_height="132px"
                android:background="@mipmap/item_listview_home"
                android:orientation="vertical">


    <ImageView
        android:layout_centerVertical ="true"
        android:layout_margin="24px"
        android:layout_width="95px"
        android:layout_height="95px"
        android:background="@null"
        android:id="@+id/item_homelist_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:id="@+id/ll_home_2"
        android:layout_width="414px"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_homelist_icon"
        android:layout_toEndOf="@+id/item_homelist_icon">

        <TextView
            android:layout_marginTop="0dp"
            android:id="@+id/item_homelist_name"
            android:layout_width="wrap_content"
            android:textSize="36px"
            android:layout_height="wrap_content"
            android:textColor="#b1b1b1"
            android:text="名字"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/item_homelist_status"
            android:layout_marginTop="7.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d2d2d2"
            android:text="在线状态"
            android:textSize="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@+id/ll_home_2"
        android:layout_centerVertical ="true"
        android:layout_width="100px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_height="125px">
        <ImageView
            android:layout_margin="37px"
            android:layout_gravity="center"
            android:id="@+id/item_arrow"
            android:layout_width="19px"
            android:background="@mipmap/btn_list_right_arrow"
            android:layout_height="37px"/>

    </LinearLayout>

</RelativeLayout>