<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_v"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="288dp"
        android:layout_height="125dp"
        android:background="@mipmap/bg_morning"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00"
                    android:textColor="#ffffff"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/tv_timeonoff"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关"
                    android:textColor="#ffffff"
                    android:textSize="22dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_power1"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1路"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/tv_power2"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2路"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    />

                <TextView
                    android:id="@+id/tv_power3"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3路"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="229dp"
                android:layout_height="45dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_day1"
                    android:text="周一"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#AFBFCD"
                    />



                <TextView
                    android:id="@+id/tv_day2"
                    android:text="周二"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#AFBFCD"
                    />

                <TextView
                    android:id="@+id/tv_day3"
                    android:text="周三"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#AFBFCD"
                    />

                <TextView
                    android:id="@+id/tv_day4"
                    android:text="周四"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#AFBFCD"
                    />

                <TextView
                    android:id="@+id/tv_day5"
                    android:text="周五"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#AFBFCD"
                    />

                <TextView
                    android:id="@+id/tv_day6"
                    android:text="周六"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#AFBFCD"
                    />

                <TextView
                    android:id="@+id/tv_day7"
                    android:text="周天"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#AFBFCD"
                    />
            </LinearLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.vanhitech.vanhitech.views.SlipButton
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/bt_splitbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:clickable="false"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>