<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/base_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0f0f0"
    >


    <!-- 标题栏 -->
    <include layout="@layout/base_ativity_head"/>
    <!--标签-->
    <!-- 具体的内容,但是现在不知道是什么,所以先定义一个容器 -->

    <RelativeLayout
        android:id="@+id/deviceinfo_list"
        android:layout_gravity="center"
        android:layout_width="656px"
        android:layout_height="140px"
        android:layout_marginTop="20dp"
        android:background="@mipmap/item_listview_home"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deviceinfo_icon"
            android:layout_width="93px"
            android:layout_height="93px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@null"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/deviceinfo_icon"
            android:layout_toRightOf="@+id/deviceinfo_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deviceinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="50px"
                android:layout_marginTop="5dp"
                android:text="设备名字"
                android:textColor="#b1b1b1"
                android:textSize="18dp"
                />


            <RelativeLayout
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|bottom"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="m"
                    android:textColor="#b1b1b1"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/ac"
                    android:layout_alignBottom="@+id/ac"
                    />

                <TextView
                    android:id="@+id/ac"
                    android:layout_width="wrap_content"
                    android:gravity="center|bottom"
                    android:layout_height="match_parent"
                    android:text="ac: "
                    android:textColor="#b1b1b1"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/deviceinfo_xxx"
                    android:layout_alignBottom="@+id/deviceinfo_xxx"
                    />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/deviceinfo_xxx"
                android:layout_width="wrap_content"
                android:gravity="center|bottom"
                android:layout_height="match_parent"
                android:text="xxxxx"
                android:layout_gravity="right"
                android:layout_marginRight="50px"
                android:textColor="#b1b1b1"
                android:textSize="15dp"
                />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>






</LinearLayout>