<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/base_activity"
              xmlns:android="http://schemas.android.com/apk/res/android"

    >
    <!-- 标题栏 -->
    <include layout="@layout/base_ativity_head"/>
    <!-- 具体的内容,但是现在不知道是什么,所以先定义一个容器 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            style="@style/text_help"
            android:layout_marginTop="28px"
            android:layout_weight="1"
            android:text="旧密码"
            />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:password="true"
                android:id="@+id/et_oldPwd"
                style="@style/editText_update_set"
                android:layout_marginTop="28px"
                android:layout_weight="3"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="101px"
                android:layout_alignBottom="@+id/et_oldPwd"
                android:layout_alignEnd="@+id/et_oldPwd"
                android:layout_alignRight="@+id/et_oldPwd">

                <CheckBox
                    android:id="@+id/cb_is_oldPwd"
                    android:layout_width="67px"
                    android:layout_height="67px"

                    android:layout_margin="5dp"
                    android:background="@drawable/regsiter_checkbox"
                    android:button="@null"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28px"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            style="@style/text_help"
            android:layout_weight="1"
            android:text="新密码"
            />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:password="true"
                android:id="@+id/et_newPwd"
                style="@style/editText_update_set"
                android:layout_marginTop="28px"
                android:layout_weight="3"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="101px"
                android:layout_alignBottom="@+id/et_newPwd"
                android:layout_alignEnd="@+id/et_newPwd"
                android:layout_alignRight="@+id/et_newPwd">

                <CheckBox
                    android:id="@+id/cb_is_newPwd"
                    android:layout_width="67px"
                    android:layout_height="67px"
                    android:layout_margin="5dp"
                    android:background="@drawable/regsiter_checkbox"
                    android:button="@null"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            style="@style/text_help"
            android:layout_marginTop="28px"
            android:layout_weight="1"
            android:text="确认新密码"
            />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:password="true"
                android:id="@+id/et_confirmPwd"
                style="@style/editText_update_set"
                android:layout_marginTop="28px"
                android:layout_weight="3"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="101px"
                android:layout_alignBottom="@+id/et_confirmPwd"
                android:layout_alignEnd="@+id/et_confirmPwd"
                android:layout_alignRight="@+id/et_confirmPwd">

                <CheckBox
                    android:id="@+id/cb_is_confirmPwd"
                    android:layout_width="67px"
                    android:layout_height="67px"
                    android:layout_margin="5dp"
                    android:background="@drawable/regsiter_checkbox"
                    android:button="@null"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>