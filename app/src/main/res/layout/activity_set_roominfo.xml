<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_home_roominfo"
    style="@style/base_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >
    <!-- 标题栏 -->
    <include layout="@layout/base_ativity_head"
        />
    <!-- 具体的内容,但是现在不知道是什么,所以先定义一个容器 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/room_info_name"
        >

        <TextView
            style="@style/home_textview_size"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="名称"
            android:layout_marginLeft="33px"
            android:textSize="36px"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/bedroor"
                style="@style/home_textview_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="卧室"
                android:textSize="36px"
                />


            <ImageView
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_width="18px"
                android:layout_height="29px"
                android:background="@mipmap/arrowrightprivate"/>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="244px"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/room_info_picture"
        >


        <TextView
            style="@style/home_textview_size"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_marginLeft="33px"
            android:text="图片"
            android:textSize="36px"/>

        <LinearLayout
            android:layout_width="348px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/roominfo_photo"
                style="@style/home_textview_size"
                android:layout_width="274px"
                android:layout_height="174px"
                android:background="@null"
                android:text="卧室"
                />

            <ImageView
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_width="18px"
                android:layout_height="29px"
                android:background="@mipmap/arrowrightprivate"/>
        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/rootdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38px"
        android:layout_gravity="center"
        android:layout_marginTop="98px"
        android:background="@drawable/button_roominfo_delete"
        android:text="删除房间"
        />


</LinearLayout>